  public function staticsBounced() {
    $bounced = \Mxc::find([["bounced" => ['$gte' => "1"], "idMail" => $this->idMail]]);
    $arr = array();
    $soft = 0;
    $hard = 0;
    foreach ($bounced as $key) {
      if ($key->bouncedCode == 10 || $key->bouncedCode == 90 || $key->bouncedCode == 200) {
        $hard++;
      } else {
